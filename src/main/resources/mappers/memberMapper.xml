<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.survey.mappers.memberMapper">

	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 'm'.toString()">
				where membername like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'e'.toString()">
				where email like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'j'.toString()">
				where joindate like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'me'.toString()">
				where ( membername like CONCAT('%', #{keyword}, '%') OR
				email
				like
				CONCAT('%', #{keyword}, '%'))
			</if>
			<if test="searchType == 'ej'.toString()">
				where ( email like CONCAT('%', #{keyword}, '%') OR
				joindate
				like
				CONCAT('%', #{keyword}, '%'))
			</if>
			<if test="searchType == 'mej'.toString()">
				where ( member like CONCAT('%', #{keyword}, '%')
				OR
				email
				like CONCAT('%', #{keyword}, '%')
				OR
				joindate like CONCAT('%',
				#{keyword}, '%'))
			</if>
		</if>
	</sql>


	<insert id="create" parameterType="MemberVO">
		insert
		tbl_member(membername, email, joindate)
		values
		(#{membername},#{email},#{joindate})
	</insert>

	<select id="read" resultType="MemberVO">
		select * from tbl_member where
		membername = #{membername}
	</select>

	<update id="update" parameterType="MemberVO">
		update tbl_member
		set
		email = #{email}
		where membername = #{membername}
	</update>

	<delete id="delete" parameterType="MemberVO">
		delete from tbl_member
		where membername = #{membername};
	</delete>

	<select id="listAll" resultType="MemberVO">
		select * from tbl_member
		order by membername desc
	</select>

	<select id="listPage" resultType="MemberVO">
 <![CDATA[
 select 
   * 
 from 
 tbl_member
 order by membername
 limit #{page}, 10
 ]]>
	</select>

	<select id="listSearch" resultType="MemberVO">
<![CDATA[  
  select * 
  from tbl_member 
   
]]>

		<include refid="search"></include>
  
<![CDATA[    
  order by membername
  limit #{pageStart}, #{perPageNum}
]]>
	</select>

	<select id="count" resultType="java.lang.Integer">
		select count(*) from
		tbl_member
	</select>

	<select id="listSearchCount" resultType= "java.lang.Integer">
<![CDATA[  
  select count(membername) 
  from tbl_member 
   
]]>
		<include refid="search"></include>

	</select>

</mapper>
